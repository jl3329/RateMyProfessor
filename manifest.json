{
  "manifest_version": 2,

  "name": "Prof It!",
  "description": "Lets you look up professors on Rate My Professors right on your course websites!",
  "version": "1.0",

  "icons": {
    "128": "icon.png"
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["eventpage.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "http://www.ratemyprofessors.com/*"
  ]
}
